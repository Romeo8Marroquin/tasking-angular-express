{
  "compilerOptions": {
    "module": "NodeNext",
    "rootDir": "./src",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "moduleResolution": "nodenext",
    "noImplicitReturns": true,
    "noUnusedLocals": true,
    "outDir": "lib",
    "sourceMap": true,
    "strict": true,
    "skipLibCheck": true,
    "target": "ES2020"
  },
  "compileOnSave": true,
  "include": ["src/**/*"],
  "exclude": ["node_modules", "dist"]
}
